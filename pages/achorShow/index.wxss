/* pages/detail/index.wxss */
page{
  height: 100%;
  background-color: #fff;
}
.detailBox{
  height: 100%;
  position: relative;
  background: #000;
}
.videoBox{
  width: 100%;
  /* height: calc(100% - 110rpx) ; */
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
  object-fit:fill;
}
.playBtn{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%, -50%);
  z-index: 9;
}
.zhuanma{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%, -50%);
  z-index: 9;
  text-align: center;
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:36rpx;
}
.zhuanmIcon{
  width: 120rpx;
  height: 120rpx;
  /* margin-left: 108rpx; */
  margin-bottom: 20rpx;
}
.videoPoster{
  width: 100%;
  height: 100%;
  /* filter: blur(10rpx); */
  position: absolute;
}
.coverBox{
  height: 100%;
  position: relative;
}
.pageHead{
  width: 100%;
  position: absolute;
}
.videoHeader{
  width: 100%;
  height: 100%;
  padding: 0 24rpx;
  margin-top:20rpx;
}
.headLeft{
  background:rgba(0,0,0,0.4);
  border-radius:60rpx;
  height: 66rpx;
  padding: 10rpx 24rpx;
}
.userImg{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.username{
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.liveStatus{
  text-align: left;
  line-height: 34rpx;
  margin-top: 10rpx;
}
/* 直播中icon */
 .statusIcon{
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #FE3E38;
  margin-right: 10rpx;
}
/* 预告icon */
 .statusIcon.yugao{
  background-color: #03A4F6;
}
/* 回顾icon */
.statusIcon.huigu{
  background-color: #BDBDBD;
}
.videoNum{
  font-size: 22rpx;
  font-weight:600;
  height: 66rpx;
  padding: 0 18rpx;
  /* line-height: 68rpx; */
  color:rgba(255,255,255,1);
  background:rgba(0,0,0,0.4);
  border-radius:60rpx;
  min-width:90rpx;
  padding: 10rpx 24rpx;
}
.videoNum .numIcon{
  width: 24rpx;
  height: 20rpx;
  display: inline-block;
  margin-right: 8rpx;
}
.commnentBox{
  position: absolute;
  left: 24rpx;
  /* top: 772rpx; */
  bottom: 130rpx;
  min-height: 300rpx;
}
.tip{
  max-width:592rpx;
  min-height:56rpx;
  background:rgba(0,0,0,0.4);
  border-radius:28rpx;
  padding: 20rpx 15rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,165,0,1);
  margin-bottom: 10rpx;
  word-break: break-all;
}
/* .commentList{
  max-height: 226rpx;
  overflow: scroll;
} */
.commentItem{
  max-width: 430rpx;
  /* min-height: 56rpx; */
  background:rgba(0,0,0,0.4);
  border-radius:28rpx;
  font-size:22rpx;
  padding: 15rpx 15rpx;
  margin-bottom: 10rpx;
}
.user{
  color:rgba(255,218,129,1);
}
.content{
  color:rgba(255,255,255,1);
}
.detailBottom{
  width: 100%;
  position: absolute;
  bottom: 80rpx;
  left: 0;
}
.detailBottom .iconBox{
  width: 68rpx;
  height: 68rpx;
  margin: 0 24rpx;
  position: relative;
}
.detailBottom .iconBox image{
  width: 100%;
  height: 100%;
}
.iconBox .loveNum{
  min-width:47rpx;
  /* height:28rpx; */
  padding: 2rpx 5rpx;
  position: absolute;
  background-color: rgb(255,73,73);
  right:-11rpx;
  top:-14rpx;
  border-radius:15rpx;
  color: #fff;
  line-height: 28rpx;
  text-align: center;
  font-size: 24rpx;
}
.comInput{
  background-color: #fff;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  z-index: 999999;
  background: #f9fafc;
  height: 110rpx;
  color: #333;
}
.comInput input {
  position: absolute;
  border: none;
  outline: none;
  height: 110rpx;
  width: 60%;
  border-radius: 8rpx;
  padding-left: 20rpx;
  background: #f9fafc;
}
.comInput .btn{
  position: absolute;
  right: 10rpx;
  height: 100%;
}
.comInput .send-btn{
  display: inline-block;
  font-size:30rpx;
  color: #fff;
  border-radius: 8rpx;
  background: #acacac;
  box-sizing: border-box;
  padding: 8rpx 15rpx;
}
.send-btn.success{
  background: #42a65a;
  color: #fff;
}
.canvas {
  background: transparent;
  width: 180rpx;
  height:100%;
  position: fixed;
  right: 0;
  bottom: 140rpx;
}

.commentSuccess{
  position: fixed;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.5);
  z-index: 9999;
  top: 0;
  left: 0;
}
.commentSuccess .mask{
  width: 528rpx;
  height: 442rpx;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 999;
}
.commentOk{
  width: 528rpx;
  height: 376rpx;
}
.commentSuccess.noticeBox .noticeOk{
  width: 528rpx;
  height: 442rpx;
}
.commentSuccess .mask .text{
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
}
.commentSuccess .mask .iKnow{
  width: 240rpx;
  height: 60rpx;
  background-color: #3598dc;
  border-radius: 26rpx;
  font-size: 28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 60rpx;
  text-align: center;
  bottom: 90rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
}
.commentSuccess.noticeBox .mask .iKnow {
  bottom: 50rpx;
}
.liveNotice{
  display: inline-block;
  margin-top: 20rpx;
  box-sizing: border-box;
  width: 528rpx;
  padding: 0 40rpx;
  word-break: break-all;
  /* height: 90rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;

}

